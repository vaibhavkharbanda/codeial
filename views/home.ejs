<link rel="stylesheet" href="/css/home.css">
    <h1>Codeial / <%= title%></h1>
    
    <section id="post-container">
        <div id="feed-posts"><h2>Posts</h2>
        <% if(locals.user){%>
        <form action="/posts/create" id="new-post-form" method="post">
            <textarea name="content" id="post-content" cols="30" rows="3" placeholder="Type Here..." required></textarea>
            <input type="submit" value="post">
        </form>
        <%}%>
    </div>
    <div id="display-posts">
        <h2>Posts Display</h2>
        <ul id="posts-list">
            <% for(post of posts){ %>
            <li class="posts">
                <%= post.content %> By <small><%=post.user.name%></small>
                <% if(locals.user && locals.user.id==post.user.id) {%>
                    <a href="/posts/destroy/<%= post.id%>"> X</a> <%}%>
                
                <div id="post-comment">
                    <% if(locals.user){%>
                    <form action="/comments/create" method="POST">
                        <input type="text" name="content" placeholder="Type here to add comment ..." required>
                        <input type="hidden" name="post" value="<%= post._id%>">
                        <input type="submit" value="Add Comment">
                    </form>
                    <%}%>
                    <div id="comments-list">
                        <ul id="post-comments-<%=post._id%>">
                        <% for(comment of post.comments) { %>
                            <li class="comments">
                                <small> <%= comment.user.name %> -> <%= comment.content %> </small>
                                <% if(locals.user && locals.user.id==comment.user.id) {%>
                                    <a href="/comments/destroy/<%= comment.id%>"> X</a> <%}%>
                                
                            </li>
                        <% } %>
                    </ul>
                    </div>
                    
                </div>
            </li>

            <%}%>
        </ul>
    </div>
    </section>
   